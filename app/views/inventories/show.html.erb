<h1>Items</h1>
<% if (@current.business_user && @current.inventory.id == @inventory.id) %>
  <%= link_to "Add New Item", new_inventory_item_path(@inventory.id) %>
<% end %>

<% @items.each do |item| %>
  <div class="item">
    <h2><%= item.name %></h2>
    <h4><%= item.brand %></h2>
    <p>Quantity: <%=item.quantity%></p>
    <p>Weight: <%= item.weight%> g</p>
    <p>Price: $<%= number_to_currency(item.price) %></p>
    <%= link_to "Details", inventory_item_path(@inventory.id, item.id) %>
    <% if (@current.business_user && @current.inventory.id == @inventory.id)%>
      <%= link_to "Edit Item", edit_inventory_item_path(@inventory.id, item) %>
    <% end %>
  </div>
<% end %>