<h1>Items</h1>
<%= link_to "Add New Item", new_item_path %>

<% @items.each do |item| %>
  <div class="item">
    <h2><%= item.name %></h2>
    <h4><%= item.brand %></h2>
    <p>Quantity: <%=item.quantity%></p>
    <p>Weight: <%= item.weight%> g</p>
    <p>Price: $<%= item.price %></p>
    <%= link_to "Details", item %>
    <%= link_to "Edit Item", edit_item_path(item) %>
  </div>
<% end %>