<h1>New item</h1>
<%= form_with(model: @item, url: inventory_items_path) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :brand %>
      <%= form.text_field :brand %>
    </div>
  
    <div>
      <%= form.label :quantity %>
      <%= form.number_field :quantity, step: 1 %>
    </div>
  
    <div>
      <%= form.label :weight, "Weight (in grams)" %>
      <%= form.number_field :weight, step: 0.01 %>
    </div>
    
    <div>
      <%= form.label :price, "Price (in USD)" %>
      <%= form.number_field :price, step: 0.01%>
    </div>

    <div>
      <%= form.label :category_id, "Category"%>
      <%= collection_select(@item, :category_id, Category.all, :id, :name, :prompt => true) %>
    </div>
    
  
    <div>
      <%= form.submit %>
    </div>
<% end %>
<%= link_to "Cancel", inventory_path(@inventory.id) %>
